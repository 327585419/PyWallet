#:kivy 1.0

<Controller>:
    balance_label: balance_label_id

    BoxLayout:
        orientation: 'vertical'
        padding: 20

        Label:
            id: balance_label_id
            size_hint: 1, 0.7
            text: 'Balance:'

        BoxLayout:
            size_hint: 1, 0.3

            orientation: 'horizontal'
            padding: 20

            Button:
                text: 'Overview'
                on_press: root.do_action()

            Button:
                text: 'Send'
                # on_press: root.do_action()

            Button:
                text: 'Receive'
                # on_press: root.do_action()
