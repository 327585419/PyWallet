#:kivy 1.0

#:import MDList kivymd.list.MDList
#:import Toolbar kivymd.toolbar.Toolbar
#:import MDTextField kivymd.textfields.MDTextField
#:import MDDropdownMenu kivymd.menu.MDDropdownMenu
#:import MDBottomNavigation kivymd.tabs.MDBottomNavigation
#:import QRCodeWidget kivy.garden.qrcode




<Send@BoxLayout>:
    orientation: 'vertical'
    MDLabel:
        font_style: 'Display1'
        text: 'Send:'

<Receive@BoxLayout>:
    orientation: 'vertical'
    MDLabel:
        font_style: 'Display1'
        text: 'Receive:'
    ScrollView:
        do_scroll_x: False
        MDList:
            id: address_list_id
    QRCodeWidget:
        id: qr_code_id

<Overview@BoxLayout>:
    orientation: 'vertical'
    MDLabel:
        id: balance_label_id
        size_hint_y: None
        font_style: 'Display1'
        text: 'Balance:'
    History:
        id: history_id



# transactions history
<History@BoxLayout>:
    orientation: 'vertical'
    MDLabel:
        size_hint_y: None
        font_style: 'Display1'
        text: 'History:'
    ScrollView:
        MDList:
            id: ml
            OneLineListItem:
                text: "Some history 1"
            OneLineListItem:
                text: "Some history 2"
            OneLineListItem:
                text: "Some history 3"
            OneLineListItem:
                text: "Some history 4"
            OneLineListItem:
                text: "Some history 5"

<Controller>:
    # balance_label: balance_label_id

    BoxLayout:
        orientation: 'vertical'
        # padding: 20
        Toolbar:
            id: toolbar_id
            title: 'PyWallet'
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            left_action_items: [['menu', lambda x: None]]
            right_action_items: [['dots-vertical', lambda x: None]]
        ScreenManager:
            id: screen_manager_id

            Screen:
                name: 'overview'
                MDBottomNavigation:
                    id: bottom_navigation_id
                    MDBottomNavigationItem:
                        name: 'overview'
                        text: "Overview"
                        icon: 'format-list-bulleted'
                        Overview:
                            id: overview_id
                    MDBottomNavigationItem:
                        name: 'send'
                        text: "Send"
                        icon: 'arrow-up-bold'
                        Send:
                            id: send_id
                    MDBottomNavigationItem:
                        name: 'receive'
                        text: "Receive"
                        icon: 'arrow-down-bold'
                        Receive:
                            id: send_id

            Screen:
                name: 'manage_keystores'
                BoxLayout:
                    orientation: 'vertical'
                    MDLabel:
                        # size_hint_y: None
                        font_style: 'Display1'
                        halign: 'center'
                        valign: 'middle'
                        text: 'Keystore not found'
                    MDLabel:
                        halign: 'center'
                        valign: 'middle'
                        text: 'Copy it in to the keystore directory.'
